<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:paddingTop="@dimen/dp10"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/commentlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eventframe"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:id="@+id/eventimage"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dummyimage"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/user_name"
                    android:textSize="@dimen/sp33"
                    android:text="Mehendi"/>

            <TextView
                android:id="@+id/eventdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brownTextColor"
                android:text="June 21st 2017 / 11:00 AM"
                android:textSize="@dimen/sp15"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brownTextColor"
                android:text="Tansen Hall"
                android:id="@+id/eventplace"
                android:textSize="@dimen/sp15"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/commentlayout"
        android:layout_marginLeft="130dp">

        <Button
            android:id="@+id/map"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/button_round"
            android:textColor="@android:color/white"
            android:text="MAP"/>

        <Button
            android:id="@+id/rsvp"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/button_round"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/dp20"
            android:text="RSVP"/>
    </LinearLayout>
</RelativeLayout>