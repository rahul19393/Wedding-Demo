<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">


        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:src="@drawable/photo"
            />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I saw you standing here, and I just had to come tell you you have the most striking sense of style I've seen all day. I'm Aayush."
            android:layout_marginLeft="@dimen/dp15"
            android:background="#ECE4E3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp15"
            android:padding="@dimen/dp10"
            android:layout_toRightOf="@+id/userphoto"
            android:layout_marginRight="@dimen/dp100"/>


    </RelativeLayout>


</LinearLayout>