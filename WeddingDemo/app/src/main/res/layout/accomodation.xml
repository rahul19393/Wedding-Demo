<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:id="@+id/hotelinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:textColor="@color/storyTextColor"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7.3sp"
        android:gravity="center_horizontal"
        android:text="We&apos;ve selected 3 hotels that range from $150 to $300 a night for your luxury accomodation. Mention our Group Booking Code: WEDDING"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:dividerHeight="@dimen/dp10"
        android:id="@+id/listitem"
        android:divider="@android:color/transparent"
        android:layout_margin="@dimen/dp10"></ListView>

</LinearLayout>