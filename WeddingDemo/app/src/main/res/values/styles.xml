<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="CursorWheelLayout">
        <attr name="wheelSelectedAngle" format="float"></attr>
        <attr name="wheelPaddingRadio" format="float"></attr>
        <attr name="wheelCenterRadio" format="float"></attr>
        <attr name="wheelItemRadio" format="float"></attr>
        <attr name="wheelFlingValue" format="integer"></attr>
        <attr name="wheelCursorHeight" format="dimension"></attr>
        <attr name="wheelCursorColor" format="color"></attr>
        <attr name="wheelBackgroundColor" format="color"></attr>
        <!-- <attr name="wheelItemRotateMode" format="enum">
             <enum name="none" value="0"></enum>
             <enum name="inward" value="1"></enum>
             <enum name="outward" value="2"></enum>
         </attr>-->
        <attr name="wheelGuideLineWidth" format="dimension"></attr>
        <attr name="wheelGuideLineColor" format="color"></attr>
    </declare-styleable>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
    <style name="DialogFadeInAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DialogFadeInOutAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogFadeInAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme_Dialog" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
</resources>
